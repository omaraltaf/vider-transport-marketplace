# Vider Transport Marketplace - Environment Variables Template
# Copy this file to .env.local and update the values for your environment

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_BACKEND_URL=http://localhost:3000
VITE_FRONTEND_URL=http://localhost:5173

# Environment
VITE_ENVIRONMENT=development

# UI Configuration
VITE_REFRESH_INTERVAL=30000
VITE_NOTIFICATION_TIMEOUT=5000
VITE_AUTO_REFRESH=true

# Mock Data Configuration (for development/testing)
VITE_MOCK_DATA=true
VITE_MOCK_REVENUE=2500000
VITE_MOCK_COMMISSION_RATE=0.05
VITE_CURRENCY=NOK

# Production URLs (update these for your deployment)
# VITE_API_BASE_URL=https://your-backend-domain.com/api
# VITE_BACKEND_URL=https://your-backend-domain.com
# VITE_FRONTEND_URL=https://your-frontend-domain.com