# Production Environment Variables Template
# Copy this file and update with actual production values

# Database
DATABASE_URL=postgresql://user:password@host:5432/vider_production

# Authentication - GENERATE STRONG SECRETS FOR PRODUCTION
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_32_CHAR_SECRET
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Email Configuration - Configure with your email provider
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
SMTP_FROM=noreply@yourdomain.com

# Platform Configuration
PLATFORM_COMMISSION_RATE=5
PLATFORM_TAX_RATE=25
BOOKING_TIMEOUT_HOURS=24
DEFAULT_CURRENCY=NOK

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Application
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://yourdomain.com

# Security
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379